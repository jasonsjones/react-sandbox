{
    "name": "app",
    "version": "0.1.6",
    "description": "A React app",
    "main": "index.js",
    "scripts": {
        "dev": "webpack-dev-server --open --config webpack-dev.config.babel.js",
        "clean": "rimraf dist/",
        "prebuild:prod": "yarn clean",
        "build:dev": "babel-node tools/build.js",
        "build:prod": "webpack --config webpack-prod.config.babel.js",
        "lint": "eslint webpack.config.js tools/**/*.js src/**/*.js",
        "prestart": "yarn build:prod",
        "start": "babel-node server/server.js",
        "test": "jest"
    },
    "keywords": [
        "React"
    ],
    "author": "Jason Jones",
    "license": "MIT",
    "jest": {
        "moduleNameMapper": {
            "\\.(eot|ttf|woff|woff2|svg)$": "<rootDir>/src/components/__mocks__/fileMock.js",
            "\\.css$": "<rootDir>/src/components/__mocks__/styleMock.js"
        },
        "setupTestFrameworkScriptFile": "<rootDir>/src/testSetup.js",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "index.js"
        ]
    },
    "dependencies": {
        "@salesforce-ux/design-system": "^2.3.1",
        "express": "^4.16.2",
        "prop-types": "^15.6.1",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-redux": "^5.0.7",
        "react-router-dom": "^4.1.2",
        "react-svg-inline": "^2.0.1",
        "redux": "^4.0.0",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^2.3.0"
    },
    "devDependencies": {
        "babel": "^6.23.0",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.25.0",
        "babel-eslint": "^8.2.1",
        "babel-jest": "^23.0.0-alpha.0",
        "babel-loader": "^7.1.1",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "babel-preset-stage-3": "^6.24.1",
        "css-loader": "^0.28.4",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "eslint": "^4.17.0",
        "eslint-plugin-react": "^7.6.1",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "file-loader": "^1.1.6",
        "html-webpack-plugin": "^3.0.0",
        "jest": "^22.4.2",
        "raw-loader": "^0.5.1",
        "react-test-renderer": "^16.2.0",
        "rimraf": "^2.6.2",
        "style-loader": "^0.20.0",
        "uglifyjs-webpack-plugin": "^1.2.3",
        "webpack": "^4.1.0",
        "webpack-cli": "^2.0.10",
        "webpack-dev-server": "^3.0.0",
        "webpack-merge": "^4.1.2"
    }
}
